<!DOCTYPE html>
<html>
  <head>
    <title>Nile</title>
    <%= stylesheet_link_tag    "application" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div id='header'>
      <%- if current_user %>
        <%= link_to "Log out", "sessions/destroy", :method => :delete %>
      <%- end %>
    </div>
    <div id="notice">
      <%= flash[:notice] %>
    </div>

    <%= yield %>

  </body>
</html>